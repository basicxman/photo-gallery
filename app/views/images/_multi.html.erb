<div id="gallery-view">
  <% @images.each do |image| %>
    <% unless image.new_record? %>
      <div class="image" id="<%= dom_id(image) %>">
        <%= link_to image_tag(image.image.url(:thumb)), image_path(image) %>
      </div>
    <% end %>
  <% end %>
  <div style="clear: both;"></div>
</div>
